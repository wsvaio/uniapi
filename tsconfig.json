{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",

    "esModuleInterop": true,

    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@wsvaio/uniapi": ["package/index.ts"],
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "@dcloudio/types"]
  },
  "vueCompilerOptions": {
    "nativeTags": ["block", "component", "template", "slot"]
  },
  "exclude": ["dist", "node_modules"],
	"include": ["package/**/*.ts"]
}
